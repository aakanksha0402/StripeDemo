<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Stripe card</th>
      <th>Deafult</th>
      <th>Last 4</th>
      <th>Brand</th>
      <th>Exp month</th>
      <th>Exp year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.customer %></td>
        <td><%= card.stripe_card_id %></td>
        <td><%= card.deafult %></td>
        <td><%= card.last_4 %></td>
        <td><%= card.brand %></td>
        <td><%= card.exp_month %></td>
        <td><%= card.exp_year %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

